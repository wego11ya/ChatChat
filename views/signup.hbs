<div style="max-width: 400px; margin: auto;">
  <h2 style="color: white; text-align: center;">Sign Up</h2>
  {{> messages}}
  <form action="/signup" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label" style="color: white;">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        required
        style="color: white; background-color: transparent; border: 1px solid white;"
      />
    </div>
    <div class="mb-3">
      <label for="email" class="form-label" style="color: white;">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        style="color: white; background-color: transparent; border: 1px solid white;"
      />
    </div>
    <div class="mb-3">
      <label
        for="password"
        class="form-label"
        style="color: white;"
      >Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
        style="color: white; background-color: transparent; border: 1px solid white;"
      />
    </div>
    <div class="mb-3">
      <label
        for="passwordConfirmation"
        class="form-label"
        style="color: white;"
      >Password Confirmation</label>
      <input
        type="password"
        class="form-control"
        id="passwordConfirmation"
        name="passwordConfirmation"
        required
        style="color: white; background-color: transparent; border: 1px solid white;"
      />
    </div>
    <button
      type="submit"
      class="btn btn-primary"
      style="background-color: rgba(255, 255, 255, 0.5); color: white; border: none;"
    >Submit</button>
  </form>
</div>